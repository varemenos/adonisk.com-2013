extends ../layout
block header
	include ../partials/header
block content
	include subheader
	main#tool
		#selection.active
			//- button#action-settings(disabled)
			//- 	i.fa.fa-cog
			//- 	|  Settings
			button#action-encode
				i.fa.fa-play
				|  Encode
			button#action-decode
